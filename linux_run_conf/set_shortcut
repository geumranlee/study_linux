alias glp='git log -p'
alias gca='git commit --amend'
alias gcl='git config --list'
alias gbv='git branch -v'
alias gb='git branch'
alias gc-='git checkout --'
alias gc='git checkout'
alias grh='git reset HEAD^1 --hard'
